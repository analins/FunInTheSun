<!-- SCRIPTS AND TEMPLATES THAT ARE ONLY NECESSARY FOR PROFILE VIEW  -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.js" charset="utf-8"></script>

<script src="/js/directionscripts.js" charset="utf-8"></script>




<!--  Templates -->
<script id="city-data" type="text/x-handlebars-template">
    {{#each cities}}
    <li>
      <div class="card hoverable small" style="max-width: 350px">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src="/images/city-weather-glass-skyscrapers.jpg">
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4">{{ location.city }} – {{ location.forecast.simpleforecast.forecastday.[0].high.fahrenheit }}<i class="material-icons right">more_vert</i></span>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">{{ location.city }}<i class="material-icons right">close</i></span>
          <p>Temperature.</p>
          <p>conditions.</p>
          <p>icon.</p>
        </div>
      </div>
    </li>
    {{/each}}
</script>

<script id="user-profile" type="text/x-handlebars-template">
  {{#each users}}
    <div id="first-name">
      {{ name: first }}
    </div>
    <div id="last-name">
      {{ name: last }}
    </div>
    <div id="username">
      {{ name: username }}
    </div>
    <div id="password">
      {{ password }}
    </div>
  {{/each}}
</script>

<script id="default-weather" type="text/x-handlebars-template">
  <h5>{{current_observation.display_location.full}}</h5>
  <h4>{{current_observation.temp_f}} °F </h4>
  <h5>{{current_observation.weather}}</h5>
  <img src={{current_observation.icon_url}} class="weather-icon" alt="weather-icon">
</script>

<script id="best-weather" type="text/x-handlebars-template">
  <h5>{{city}}</h5>
  <h4>{{currenttemp_f}} °F </h4>
  <h5>{{description}}</h5>
  <img src={{icon}} class="weather-icon" alt="weather-icon">
  <h5>{{get directions}}</h5>
</script>

<script id="directions" type="text/x-handlebars-template">
  <h4>Directions to {{routes.[0].legs.[0].end_address}} </h4>
  <h5>Distance: {{routes.[0].legs.[0].distance.text}}</h5><h5>Travel Time:{{routes.[0].legs.[0].duration.text}} %></h5>
  <ol>
    {{#each routes.[0].legs.[0].steps}}
    <li>{{{this.html_instructions}}}</li>
    {{/each}}
  </ol>
</script>
