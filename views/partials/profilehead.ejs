<!-- SCRIPTS AND TEMPLATES THAT ARE ONLY NECESSARY FOR PROFILE VIEW  -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.js" charset="utf-8"></script>

<script src="/js/directionscripts.js" charset="utf-8"></script>
<script src="/js/profiledisplay.js" charset="utf-8"></script>




<!--  Templates -->
<script id="city-data" type="text/x-handlebars-template">
    {{#each cities}}
    <li>
      <div class="card hoverable small" style="max-width: 350px">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" >
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4">{{ location.city }} – {{ forecast.simpleforecast.forecastday.[0].high.fahrenheit }}&deg;<i class="material-icons right">more_vert</i></span>
          <p class="delete" id="{{ location.zip }}"></p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">{{ location.city }} – {{ forecast.simpleforecast.forecastday.[0].high.fahrenheit }}&deg;<i class="material-icons right">close</i></span>
          <img src="{{forecast.simpleforecast.forecastday.[0].icon_url}}" alt="">
          <p>{{forecast.txt_forecast.forecastday.[0].fcttext}}</p>
          <form class="directions-form">
              <input type="hidden" class="form-zip" placeholder="Zipcode" value="{{ location.zip }}">
              <input type="submit" value="Get Directions" class="waves-effect waves btn-flat">
          </form>
        </div>
      </div>
    </li>
    {{/each}}
</script>


<script id="default-weather" type="text/x-handlebars-template">
  <h5>{{current_observation.display_location.full}}</h5>
  <h4>{{current_observation.temp_f}}°F </h4>
  <h5 id="weather-description">{{current_observation.weather}}</h5>
  <img src={{current_observation.icon_url}} class="weather-icon" alt="weather-icon">
</script>


<script id="best-weather" type="text/x-handlebars-template">
  <h5>{{city}}</h5>
  <h4>{{currenttemp_f}}°F </h4>
  <h5>{{description}}</h5>
  <img src={{icon}} class="weather-icon" alt="weather-icon">
  <h5>{{get directions}}</h5>
</script>

<script id="directions" type="text/x-handlebars-template">
  <h5>Directions to {{routes.[0].legs.[0].end_address}} </h>
  <h6>Distance: {{routes.[0].legs.[0].distance.text}}</h6><h6>Travel Time:{{routes.[0].legs.[0].duration.text}} %></h6>
  <ol>
    {{#each routes.[0].legs.[0].steps}}
    <li>{{{this.html_instructions}}}</li>
    {{/each}}
  </ol>
</script>


<!-- Material -->

<script id="loader" type="text/html">
    <div class="loader-container">
        <div class="preloader-wrapper big active">
            <div class="spinner-layer spinner-blue-only">
                <div class="circle-clipper left">
                    <div class="circle"></div>
                </div><div class="gap-patch">
                    <div class="circle"></div>
                </div><div class="circle-clipper right">
                    <div class="circle"></div>
                </div>
            </div>
        </div>
    </div>
</script>
